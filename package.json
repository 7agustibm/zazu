{
  "email": "blainesch@gmail.com",
  "build": {
    "appId": "TinyTacoTeam.ZazuApp",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/windows/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "installerHeaderIcon": "resources/windows/setup-icon.ico"
    },
    "linux": {
      "category": "Utility",
      "synopsis": "A cross platform productivity application.",
      "target": [
        "deb"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "resources/osx/icon.icns",
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "icon": "resources/osx/dmg-icon.icns",
      "background": "resources/osx/dmg-background.png"
    }
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "cheerio": "^0.20.0",
    "cross-env": "^2.0.0",
    "cucumber": "^1.2.2",
    "electron-builder": "^7.12.2",
    "electron-mocha": "^1.0.0",
    "electron-prebuilt": "^1.3.1",
    "eslint": "2.3.0",
    "eslint-config-standard": "5.1.0",
    "eslint-plugin-promise": "1.1.0",
    "eslint-plugin-react": "^5.0.1",
    "eslint-plugin-standard": "1.3.2",
    "fs-jetpack": "^0.7.3",
    "gh-pages": "^0.11.0",
    "gulp": "^3.9.0",
    "husky": "^0.11.4",
    "nodetree": "0.0.3",
    "robotjs": "^0.4.4",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0",
    "spectron": "^3.3.0"
  },
  "scripts": {
    "disttree": "nodetree dist",
    "prepush": "npm run lint && npm test",
    "postinstall": "cd app && npm install",
    "prerelease": "npm install",
    "release": "build --x64 --publish never",
    "start": "cross-env NODE_ENV=development electron ./app",
    "test": "cross-env NODE_ENV=test electron-mocha --recursive test/app",
    "cucumber": "cucumberjs",
    "lint": "eslint .",
    "install-native": "node ./tasks/install_native_module",
    "docs:publish": "gulp ghpages"
  }
}
